        <div class="col-md-4">
          <div class="row">
              <p class="lead text-center">Current Observations <span class="small">(1h history)</span></p>
          </div>
          <div class="row">
              <div class="col-xs-6 col-sm-4 col-md-6" align="center">
                <img src="windRoseGauge.png" width=100% alt="">
                <h5>$Labels.Generic.windDir</h5>
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6" align="center">
                <img src="windSpeedGauge.png" width=100% alt="">
                <h5>$Labels.Generic.windSpeed</h5>
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6 hidden-sm" align="center">
                <img src="outTempGauge.png" width=100% alt="">
                <h5>$Labels.Generic.outTemp</h5>
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6" align="center">
                <img src="windGustGauge.png" width=100% alt="">
                <h5>$Labels.Generic.windGust</h5>            
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6 visible-sm-block" align="center">
                <img src="outTempGauge.png" width=100% alt="">
                <h5>$Labels.Generic.outTemp</h5>
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6" align="center">
                <img src="outHumidityGauge.png" width=100% alt="">
                <h5>$Labels.Generic.outHumidity</h5>            
              </div>          
              <div class="col-xs-6 col-sm-4 col-md-6" align="center">
                <img src="barometerGauge.png" width=100% alt="">
                <h5>$Labels.Generic.barometer</h5>            
              </div>          
          </div>   
          
          <div class="row">
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
            <script src="js/radarloop.js"></script>
            <a href="http://tempest.aos.wisc.edu/radar/wi3compjs.html">
            <div ng-app="RadarLoopApp" ng-controller="LoopController">
              <img ng-repeat="index in imageIndices"
                   ng-show="index == activeIndex"
                   ng-src="http://tempest.aos.wisc.edu/radar/wi3comp{{index}}.gif"
                   style="width: 100%;">
            </div>
            </a>
          </div>
          <!-- Station info -->
          <div class="row">
            <table class="table table-hover">
              <tbody>
	              <tr>
	                <td>$BootstrapLabels.status.latitude</td>
	                <td>$station.latitude[0]&deg; $station.latitude[1]' $station.latitude[2]</td>
	              </tr>
	              <tr>
	                <td>$BootstrapLabels.status.longitude</td>
	                <td>$station.longitude[0]&deg; $station.longitude[1]' $station.longitude[2]</td>
	              </tr>
	              <tr>
	                <td>$BootstrapLabels.status.altitude</td>
	                <td>$station.altitude</td>
	              </tr>
	              <tr>
	                <td>$BootstrapLabels.status.station_uptime</td>
	                <td>$station.uptime</td>
	              </tr>
	              <tr>
	                <td>$BootstrapLabels.status.server_uptime</td>
	                <td>$station.os_uptime</td>
	              </tr>
	              <tr>
	                <td>$BootstrapLabels.almanac.sun</td>
	                <td>$almanac.sunrise / $almanac.sunset</td>
	              </tr>
	            </tbody>
            </table>  
          </div>        
          
        </div>
